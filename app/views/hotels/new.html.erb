
        <div class="wrapper add-hotel">
            <h2 class="add-hotel--headline">Add Your Hotel</h2>

            <form accept-charset="UTF-8" action="/hotels/create" method="post">
                <div class="form-input">
                    <label for="hotel_name">Hotel Name: </label>
                    <input type="text" name="hotel[name]" placeholder="e.g. Gambia Beach Hotel">
                </div>
                
                <div class="form-input">
                    <label for="hotel_rating">Hotel Rating: </label>
                    <select name="category[name]" id="hotel_rating">
                        <option value="3">3 Star</option>
                        <option value="4">4 Star</option>
                        <option value="5">5 Star</option>
                    </select>
                </div>

                <div class="form-input">
                    <label for="hotel_address">Hotel Address: </label>
                    <input type="text" name="hotel[address]" placeholder="e.g. Kololi, Senegambia">
                </div>

                <div class="form-input">
                    <label for="hotel_website">Hotel Website: </label>
                    <input type="url" name="hotel[website]" placeholder="e.g. http://www.gambiabeachhotel.com">
                </div>

                <div class="form-input">
                    <label for="hotel_email">Hotel Email: </label>
                    <input type="email" name="hotel[email]" placeholder="e.g. hello@gambiabeachhotel.com">
                </div>

                <div class="form-input">
                    <label for="hotel_number">Hotel Number: </label>
                    <input type="number" name="hotel[phone]" placeholder="e.g. 4380533">
                </div>

                <div class="form-input">
                	<label for="hotel_thumbnail">Hotel Thumbnail:</label>
                	<img id="hotel_thumbnail" />
                	<input type="file" id="files" name="hotel[hotel_image]" />
                </div>

                <div class="form-input">
                	<label for="hotel_video_url" style="margin-bottom: 28px;">Hotel Video Url:</label>
                	<input type="url" name="hotel[video]" placeholder="e.g. https://www.youtube.com/watch?v=PtmmlOQnTXM">
                </div>

                <div class="form-input">
                    <label for="about_hotel">About Hotel: </label>
                    <textarea name="hotel[description]" id="about_hotel" cols="30" rows="13"></textarea>
                </div>

                <div class="form-input">
                    <label for="hotel_facilities">Hotel Facilities: </label>
                    <select id='pre-selected-options' multiple='multiple'>
					  <option value='restaurant' selected>Restaurant</option>
					  <option value='bar_lounge'>Bar/Lounge</option>
					  <option value='music'>Music</option>
					  <option value='airport_pickup'>Airport Pickup</option>
					  <option value='room_service' selected>Room Service</option>
					</select>
                </div>


                <div class="hotel-owner">
                    <div class="hotel-owner--headline">
                        Hotel contact person
                        <hr>
                    </div>

                    <div class="form-input">
                        <label for="first_name">First Name: </label>
                        <input type="text" name="first_name" placeholder="e.g. John">
                    </div>
                    <div class="form-input">
                        <label for="last_name">First Name: </label>
                        <input type="text" name="last_name" placeholder="e.g. Doe">
                    </div>
                    <div class="form-input">
                        <label for="mobile_number">Mobile Number: </label>
                        <input type="number" name="mobile_number" placeholder="e.g. 5555555">
                    </div>
                    <div class="form-input">
                        <label for="email">Email: </label>
                        <input type="email" name="email" placeholder="e.g. johndoe@example.com">
                    </div>
                </div>

                <button type="submit">Add Hotel</button>
            </form>
        </div>