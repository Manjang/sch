<div class="review-col edit-review">
	<div class="hotel-review-form">
		<h1>Edit Your Review</h1>
		<%= simple_form_for([@hotel, @review]) do |f| %>
			<div id="rating-form">
				<label>Rating</label>
			</div>
			<%= f.input :comment %>
			<%= f.button :submit, :class => "btn" %>
		<% end %>
	</div>
</div>

<script>
	$('#rating-form').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
	});
</script>